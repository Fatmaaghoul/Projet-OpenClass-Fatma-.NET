@model IEnumerable<projet.Models.Formation>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color: snow;">
    <h1>Formations</h1>

    <p>
        <a asp-action="Create">Create New Formation</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FormationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormateurName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormationDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormateurName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormationDate)
                    </td>
                    <td>

                        <a asp-action="Edit" style="color:chartreuse" asp-route-id="@item.FormationID">Edit</a> |
                        <a asp-action="Details" style="color:blueviolet" asp-route-id="@item.FormationID">Details</a> |
                        <a asp-action="Delete" style="color:crimson" asp-route-id="@item.FormationID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div class="container">
        <div class="row">
            <div class="col">
                <img src="~/images/ece74d93900bd8da583539c1c81c2ab3.jpeg" class="d-block w-100">
            </div>
            </div></div>
</body>